<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.hemantdave.gradify.second"
    android:background="#448AFF">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Course Name :"
            android:id="@+id/t"
            android:layout_gravity="center_horizontal"
            android:textColor="#a50000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/CourseName"
            android:layout_gravity="center_horizontal"
            android:textColor="#a50000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="----"
            android:id="@+id/GradeCharacter"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textSize="60sp"
            android:layout_gravity="center_horizontal"
            android:textColor="#a50000"
            android:gravity="center" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ExplainME"
            android:id="@+id/btn_stats"
            android:theme="@style/Widget.AppCompat.ButtonBar"
            android:background="#d10924"
            android:padding="5sp"
            android:layout_below="@+id/GradeCharacter"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:onClick="stat"
            android:textColor="#ffffff"
            android:capitalize="none" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="SuggestME:"
            android:id="@+id/textView"
            android:layout_marginTop="30dp"
            android:textColor="#a50000"
            android:textIsSelectable="false"
            android:textStyle="bold"
            android:typeface="monospace" />

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Course_suggestion"
            android:layout_below="@+id/btn_stats"
            android:layout_marginTop="5dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:divider="#0d0c0c"
            android:textAlignment="center"
            android:drawSelectorOnTop="true"
            android:layoutMode="opticalBounds"
            android:background="#dcdada"
            android:dividerHeight="1dp" />

    </LinearLayout>

</RelativeLayout>
